<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_agregar_corte"
    tools:context="com.proyects.juan.mypeluqueria.Activity.AgregarCorte">


        <TextView
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:hint="Seleccionar Cliente"
            android:id="@+id/tvNombreCliente" />

        <ImageButton
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:layout_toRightOf="@id/tvNombreCliente"
            android:src="@drawable/abc_ic_search_api_mtrl_alpha"
            android:onClick="aniadirCliente" />

        <View
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@id/tvNombreCliente"
            android:background="@color/medium_grey"
            android:id="@+id/line1"/>

        <TextView
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Fecha"
            android:textColor="@color/medium_grey"
            android:layout_below="@id/line1"
            android:id="@+id/textView3"/>

        <TextView
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_toRightOf="@id/textView3"
            android:layout_below="@id/line1"
            android:id="@+id/tvFecha" />

        <ImageButton
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/elejirFecha"
            android:src="@drawable/abc_spinner_mtrl_am_alpha"
            android:layout_toRightOf="@id/tvFecha"
            android:layout_below="@id/line1"
            android:onClick="seleccionarDia" />

        <View
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@id/textView3"
            android:background="@color/medium_grey"
            android:id="@+id/line2"/>

        <TextView
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Hora"
            android:textColor="@color/medium_grey"
            android:layout_below="@id/line2"
            android:id="@+id/textView4" />

        <TextView
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_below="@id/line2"
            android:layout_toRightOf="@id/textView4"
            android:id="@+id/tvHora" />

        <ImageButton
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/elejirHora"
            android:src="@drawable/abc_spinner_mtrl_am_alpha"
            android:layout_below="@id/line2"
            android:layout_toRightOf="@id/tvHora"
            android:onClick="seleccionarHora" />

         <View
             android:paddingTop="20dp"
             android:paddingBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@id/textView4"
            android:background="@color/medium_grey"
            android:id="@+id/line3"/>

        <EditText
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_below="@id/line3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/txtObservacion"
            android:hint="Agregar observaciÃ³n"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:background="#00000000" />

</RelativeLayout>
